
<div class="form-style">
  <%= simple_form_for(@project) do |f| %>
    <div class="transparent-colour">
      <%= f.input :name, label: 'PROJECT NAME',  class: "form-border"%>
      <div class="d-flex">
        <%= f.input :start_date, as: :date, html5: true, input_html: {id: "start_date"}, label: 'START DATE' %>
        <%= f.input :end_date, as: :date, html5: true, input_html: {id: "end_date"}, label: 'END DATE' %>
      </div>
      <%= f.input :budget, label: 'BUDGET' %>
      <%= f.input :client, collection: @clients, label_method: :full_name, input_html: {data: {controller: 'select2'}}, label: 'ASSIGN CLIENT' %>
      <%= f.input :description, label: 'DESCRIPTION' %>
    </div>
      <%= f.submit class: "btn-task-form", value:'+'  %>
  <% end %>
</div>

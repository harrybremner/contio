<div class="cover d-flex align-items-center justify-content-center">
  <div class="text-left text-white">
      <div class="justify-content-center">
          <% if current_user %>
          <hr>
            <h1 class="typed-js">Hey, <%= @user.first_name %>.</h1>
            <h2>Welcome back to Contio</h2>
          <hr>
          <% else %>
          <hr>
           <h1>Welcome to Contio</h1>
           <p>We make it easy for homeowners to find and manage contractors.</p>
          <hr>
          <div class="home-flex-container">
            <div>
            <%= link_to "Login", new_user_session_path, class: "button-4 btn-bigger"%>
            <%= link_to "Sign Up", new_user_registration_path, class: "button-4 btn-bigger"%>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>
  <%= render "shared/footer" %>

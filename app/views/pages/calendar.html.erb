<div class="calendar-container">
  <%= month_calendar(events: @projects, end_attribute: :end_time) do |date, projects| %>
    <%= date %>

    <% projects.each do |project| %>
      <div class="meeting">
        <p><%= project.name %></p>
        <small><%= project.time unless project.multi_days? %></small>
      </div>
    <% end %>
  <% end %>
</div>
